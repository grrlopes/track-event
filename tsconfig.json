{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": false,
    "sourceMap": false,
    "lib": ["ES2019"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "knexfile"],
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
